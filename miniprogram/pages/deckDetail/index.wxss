@import "../../style/base.wxss";
.deck-box-head {
    padding: 40rpx 20rpx;
    text-align: left;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.deck-box-head .right-btn{
    position: absolute;
    right: 20rpx;
    bottom: 0;
}
.sug-sim-btn button{
    height:50rpx;
    line-height:50rpx;
    font-size: 24rpx;
    margin: 0;
}

.deck-box-head .title{
    font-weight: bold;
    color: black;
    font-size: 36rpx;
}
.deck-box {
    width: 100%;
    box-sizing: border-box;
    padding:0 10rpx;
    display: flex;
    flex-wrap: wrap;
}

.deck-box .card-item {
    height: 50rpx;
    line-height: 50rpx;
    background: #1b1b1b;
    color: #ddd;
    position: relative;
    display: flex;
    width: 345rpx;
    margin: 0 10rpx 4rpx;
    box-sizing: border-box;
    border-radius: 4px;
}

.deck-box .card-item .card-img-wrap {
    height: 50rpx;
    text-align: right;
    flex: 1;
}
.deck-box .card-item .card-img {
    height: 100%;
    width: 210rpx;
}

.deck-box .card-item .card-img2 {
    background-position:70rpx -60rpx;
    background-repeat:no-repeat;
    background-size:100%;
    height:100%;
    width:250rpx;
    position: relative;
}

.deck-box .card-item .card-img2:before {
    content: "";
    position: absolute;
    left: 70rpx;
    height: 50rpx;
    background: #1b1b1b;
    width: 60rpx;
    z-index: 1;
}

.deck-box .card-item .card-img2:after {
    content: "";
    position: absolute;
    left: 120rpx;
    height: 50rpx;
    background: linear-gradient(to right, #1b1b1b, rgba(0, 0, 0, 0));
    width: 80rpx;
    z-index: 1;
}

.deck-box .card-item .card-quantity {
    width: 50rpx;
    color: #fba31b;
    font-weight: 700;
}

.deck-box .card-item .card-cost {
    color: #fff;
    width: 50rpx;
    background-color: #2766ad;
    font-weight: 700;
    border-radius: 4px;
}

.deck-box .card-item .card-name {
    color: #fff;
    position: absolute;
    left: 65rpx;
    z-index: 2;
}

.deck-box .card-item .is-weaken-text {
    position: absolute;
    color: red;
    font-size: 28rpx;
    font-weight: bold;
    word-break: keep-all;
    left: 0;
    right: 0;
    text-align: right;
    top: 0;
    bottom: 0;
    margin: auto;
    background-color: #fff;
    opacity: 0.7;
    padding-right: 50rpx;
    box-sizing: border-box;
}

.copy-deck-btn {
}

.copy-deck-btn button{
    width: 700rpx;
    margin: 20px 10px;
    border-radius: 4px;
}

.my-ad{
   margin-top: 40rpx;
}

.bottom-btn-box{
    height: 50px;
    position: fixed;
    bottom: 0;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    border-top: 1rpx solid #ccc;
    background: #fff;
}

.bottom-btn i-icon{
    margin-right: 10rpx;
}

.bottom-btn{
    -webkit-tap-highlight-color:initial;
    padding: 15px 0;
    background-color: initial!important;
    width: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    color: #898d98;
    border-radius: initial;
}

.collection{
    color: #2d8cf0;
}

.bottom-btn:after {
    border: none;
}

.bottom-btn .btn-inner{
    border-right: 1rpx solid #ccc;
    width: 100%;
    height: 20px;
    line-height: 20px;
}
.bottom-btn .no-border{
    border-right:0
}
