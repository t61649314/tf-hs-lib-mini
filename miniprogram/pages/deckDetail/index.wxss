    color:#fff;
}
.deck-box .card-item .card-name-Common{
    color:#fff;
}
.deck-box .card-item .card-name-Rare{
    color:#2d8cf0;
}
.deck-box .card-item .card-name-Epic{
    color: #b341e2;
}
.deck-box .card-item .card-name-Legendary{
