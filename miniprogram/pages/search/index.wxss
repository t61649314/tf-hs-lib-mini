@import "../../style/base.wxss";
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
}

.search-bar{
    display: flex;
    flex-direction: column;
    padding: 20rpx;
    width: 100%;
    box-sizing: border-box;
    border-bottom:1rpx solid #ccc;
    box-shadow: 0 1px 2px 0 #b9b9b9;
    z-index: 1;
}
.occupation-bar{
    display: flex;
    justify-content: space-between;
    padding-top: 20rpx;
}
.occupation-bar image{
    width: 60rpx;
    height: 60rpx;
    padding: 5rpx;
}
.occupation-bar .active{
    background:#2d8cf0;
    border-radius:50%;
}
.name-bar{
    position: relative;
}
.search-icon{
    position: absolute;
    left:10rpx;
    top: 12rpx;
    z-index: 1;
}
.search-name{
    padding: 0 0 0 32rpx;
}
.search-name input{
    text-align: left;
}

.from-type-bar{
    display: flex;
    padding: 20rpx 0;
    text-align: left;
}
.from-type-bar .from-item{
    box-sizing: border-box;
    padding-left: 30rpx;
    flex: 1;
    border-right: 1rpx solid #ccc;
}
.from-type-bar .type-item{
    box-sizing: border-box;
    padding-left: 30rpx;
    flex: 1;
}