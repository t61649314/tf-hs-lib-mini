@import "../../style/base.wxss";
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
}

.search-bar{
    display: flex;
    flex-direction: column;
    padding: 20rpx;
    width: 100%;
    box-sizing: border-box;
    border-bottom:1px solid #ccc;
}
.occupation-bar{
    display: flex;
    justify-content: space-between;
}
.occupation-bar image{
    width: 60rpx;
    height: 60rpx;
    padding: 5rpx;
}
.occupation-bar .active{
    background:#2d8cf0;
    border-radius:50%;
}
.name-bar{
    position: relative;
}
.search-icon{
    position: absolute;
    left:10rpx;
    top: 14rpx;
    z-index: 1;
}
.search-name{
    margin: 0 0 20rpx;
    padding: 0 0 0 32rpx;
}
.search-name input{
    text-align: left;
}

.from-type-bar{
    display: flex;
    padding: 20rpx 0;
    text-align: left;
}
.from-type-bar .from-item{
    box-sizing: border-box;
    padding-left: 30rpx;
    flex: 1;
    border-right: 1rpx solid #ccc;
}
.from-type-bar .type-item{
    box-sizing: border-box;
    padding-left: 30rpx;
    flex: 1;
}
.deck-item{
    border-bottom:1px solid #ccc;
    height: 100rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 0 32rpx;
    position: relative;
    background: #fff;
}
.deck-item:after {
    content: " ";
    display: block;
    border: 2px solid #c8c8cd;
    border-bottom-width: 0;
    border-left-width: 0;
    width: 16rpx;
    height: 16rpx;
    position: absolute;
    transform: rotate(45deg);
    right: 40rpx;
    top: 0;
    bottom: 0;
    margin: auto;
}
.item-name{
    position: absolute;
    top: 10rpx;
    left: 124rpx;
}
.item-type{
    position: absolute;
    top: 10rpx;
    right: 64rpx;
}
.item-page{
    position: absolute;
    bottom: 10rpx;
    left: 124rpx;
}
.item-time{
    position: absolute;
    bottom: 10rpx;
    right: 64rpx;
}

.item-occupation-icon {
    width: 60rpx;
    height: 60rpx;
    margin-right: 15rpx;
}
.no-data-content {
    font-size: 28rpx;
    color: #5a5a5a;
}