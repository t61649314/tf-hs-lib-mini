@import "../../style/base.wxss";
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
}

.search-bar{
    display: flex;
    flex-direction: column;
    padding: 0 20rpx;
    width: 100%;
    box-sizing: border-box;
    box-shadow: 0 1px 2px 0 #b9b9b9;
    z-index: 1;
}

.occupation-bar image{
    width: 60rpx;
    height: 60rpx;
    padding: 5rpx;
    opacity: 0.7;
    transition: opacity 0.3s ease-in-out;
}
.occupation-bar .active{
    background:#576b95;
    border-radius:50%;
    opacity: 1;
}
.search-item{
    position: relative;
    height: 100rpx;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    border-bottom: 1rpx solid #ccc;
}
.occupation-bar{
    justify-content: space-between;
    border-bottom:0;
}
.search-icon{
    position: absolute;
    left:10rpx;
    z-index: 1;
}
.search-name{
    padding: 0 0 0 60rpx;
    text-align: left;
    width: 100%;
}

.from-type-bar{
    text-align: left;
}
.from-type-bar .search-item-outer{
    height: 100%;
    display: flex;
    align-items: center;
    width: 50%;
}

.from-type-bar .from-item{
    width: 100%;
    box-sizing: border-box;
    padding-left: 20rpx;
    border-right: 1rpx solid #ccc;
}
.from-type-bar .type-item{
    width: 100%;
    box-sizing: border-box;
    padding-left: 20rpx;
}
.search-bar view{
    font-size: 24rpx;
}

.search-bar .i-input{
    border: 0;
}

.time-node-text {
    border-bottom: 1rpx solid #ddd;
    text-align: left;
    padding: 8rpx 32rpx;
    background-color: #f5f5f5;
    color: #888888;
    width: 100%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}

.time-node-text .time {
    color: #888888;
}
